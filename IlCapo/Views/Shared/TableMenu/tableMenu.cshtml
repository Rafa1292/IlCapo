@model IlCapo.Models.Bill


<div class=" bill-modal-base p-0 ">

    <div class="d-flex flex-wrap p-0 justify-content-center container-fluid " style="background: rgba(255,255,255,1);">
        <div class="col-4 d-flex flex-wrap p-0 justify-content-center  options-container" id="selectProducts">
            @Html.Partial("TableMenu/Favorites")
            @Html.Partial("TableMenu/CategoryFilter")
        </div>

        <div class="col-md-2 p-1" style="height: 95vh !important; overflow-y: scroll;" id="searchProducts">
            @Html.Partial("TableMenu/SearchProducts")
        </div>

        <div class="col-6 d-flex flex-wrap p-0  rounded  shadow-sm room-container " style="height: 100vh !important;">
            @Html.Partial("TableMenu/Bill", Model)
        </div>

        <div class="position-absolute d-flex justify-content-center align-content-center" style="height: 100vh; width: 100vw; top: -100vh; background:transparent; transition: top 0s ease, background 1s ease" id="payViewContainer">

            <div class="d-flex flex-wrap justify-content-center bill-actions" id="payView">
                <i class="fas fa-times-circle position-absolute text-danger" style="top: 1vh; right: 1vw; font-size: 4vh;" onclick="hidePaid()"></i>

                <div class="col-md-6 d-flex flex-wrap justify-content-end ">
                    @Html.Partial("BillParts/BillActions")
                </div>
                <div class="col-md-6 d-flex flex-wrap justify-content-end ">
                    @Html.Partial("BillParts/BillAmount")
                    @Html.Partial("BillParts/BillPayMethod")
                </div>
            </div>
        </div>
    </div>

</div>


