@model IlCapo.Models.Pay

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Pays", FormMethod.Post, new { @class = "d-flex justify-content-center", @id = "Pay" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="col-12 text-center">
            <span class="text-danger">
                <strong id="payLabel">
                </strong>
            </span>

        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-12">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @type = "number" , @onchange = "validateAmount()"} })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-12">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-12">
            @Html.LabelFor(model => model.PayType, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @foreach (var type in ViewBag.PayTypes)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="PayType" id="@type.Text" value="@type.Text" onclick="fillTypes(this.id)">
                        <label class="form-check-label" for="@type.Text">@type.Text</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group col-12">
            <label class="control-label col-md-12" for="">Retiro para:</label>
            <div class="col-md-10">
                <select class="form-control" id="payName" name="payName" onchange = "validateConcept()">
                    <option value="0" selected disabled>Seleccione un tipo</option>
                </select>
            </div>
        </div>

        <div class="form-group col-12  d-flex flex-wrap justify-content-start ">
            <div class=" col-6 m-1">
                <input type="button" onclick='validate()' value="Agregar pago" class="btn btn-success " />
            </div>

            <div class=" col-6 m-1">
                <a class="btn btn-outline-secondary" onclick='GetView("Pays/Index","Retiros")'>Regresar</a>
            </div>
        </div>
    </div>
}

<script>


</script>



