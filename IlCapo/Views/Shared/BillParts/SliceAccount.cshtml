@model IlCapo.Models.SliceAccount



@for (var i = 1; i <= Model.Quantity; i++)
{
    <div class="col-12 d-flex flex-wrap p-2 m-1 justify-content-end rounded " style="box-shadow: 0px 0px 10px grey;">

        <div class=" col-md-12 d-flex justify-content-between">
            <h5 class="text-left">#@i</h5>
        </div>

        <div class="d-flex flex-wrap col-md-5 p-0 justify-content-center">
            <div class="col-md-12 p-0 d-flex flex-wrap ">
                <input type="text" class="form-control rounded" placeholder="Nombre" />
            </div>
            <div class=" col-md-12">
                <h5 class="text-left">
                    <strong>
                        Total:
                    </strong>
                    ¢@Model.Price
                </h5>
            </div>
            <div class=" col-md-12">
                <button class="btn btn-success ">Pagar</button>
            </div>
        </div>

        <div class="d-flex flex-wrap col-md-7 justify-content-center">
            <div class="col-md-12 justify-content-end d-flex p-1">

                <i class="fab fa-cc-visa col-3 p-0" style="font-size:30px;"></i>
                <input type="text" name="name" value="" class="form-control mx-1" />
            </div>
            <div class="col-md-12 justify-content-end d-flex p-1">
                <span class="col-1 p-0">
                    ¢
                </span>
                <i class="fas  fa-coins " style="font-size:30px;"></i>
                <input type="text" name="name" value="" class="form-control mx-1" />
            </div>
            <div class="col-md-12 justify-content-end d-flex p-1">
                <span class="col-1 p-0">
                    $
                </span>
                <i class="fas fa-file-invoice-dollar" style="font-size:30px;"></i>
                <input type="text" name="name" value="" class="form-control mx-1" />
            </div>
        </div>
    </div>
}

