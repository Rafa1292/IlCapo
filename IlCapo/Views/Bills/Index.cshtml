@model IEnumerable<IlCapo.Models.Bill>

@{
    ViewBag.Title = "Index";
}



<label class="col-12 text-center mt-5">Total ventas: ¢@ViewBag.totalBills</label>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtrasAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TableId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToGo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayWith)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Client.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SubTotal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Taxes)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExtrasAmount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiscountAmount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Total)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TableId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ToGo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PayMethod)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PayWith)
    </td>
</tr>
}

</table>
