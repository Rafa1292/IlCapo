@model IlCapo.Models.Bill
<div class="col-12 p-0 d-flex flex-wrap ">
    <label class="col-md-8 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <strong>
            Subtotal:
        </strong>
    </label>
    <div class="col-md-3 mx-2 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <span>¢</span>
        <span name="subtotal" id="subtotal">@Model.SubTotal</span>
    </div>
</div>
<div class="col-12 p-0 d-flex flex-wrap">
    <label class="col-md-8 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <strong>
            Impuestos:
        </strong>
    </label>
    <div class="col-md-3 mx-2 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <span>¢</span>
        <span name="impuestos" id="impuestos">@Model.Taxes</span>
    </div>
</div>
<div class="col-12 p-0 d-flex flex-wrap">
    <label class="col-md-8 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <strong>
            Extras:
        </strong>
    </label>
    <div class="col-md-3 mx-2 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <span>¢</span>
        <span name="extras" id="extras">@Model.ExtrasAmount</span>
    </div>
</div>
<div class="col-12 p-0 d-flex flex-wrap ">
    <label class="col-md-8 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <strong>
            Descuento:
        </strong>
    </label>
    <div class="col-md-3 mx-2 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <span>¢</span>
        <span name="descuento" id="descuento">@Model.DiscountAmount</span>
    </div>
</div>

<div class="col-12 p-0 d-flex flex-wrap ">
    <label class="col-md-8 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <strong>
            Total:
        </strong>
    </label>
    <div class="col-md-3 mx-2 m-0 d-flex align-items-center p-0" style="justify-content: flex-end;">
        <span>¢</span>
        <span name="total" id="total">@Model.Total</span>
    </div>
</div>
