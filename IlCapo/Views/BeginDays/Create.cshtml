@model IlCapo.Models.BeginDay

@{
    ViewBag.Title = "Create";
    int[] currencyHundredsArray = { 5, 10, 25, 50, 100 };
    int[] currencyThousandsArray = { 1000, 2000, 5000, 10000, 20000, 50000 };
}


@using (Html.BeginForm("Create","BeginDays", FormMethod.Post, new { @id= "BeginDay" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <span class="text-danger ">@ViewBag.error</span>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container-fluid  d-flex flex-wrap ">
            <div class="col-md-6 ">
                <div class="form-group d-flex ">
                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @{
                            var date = DateTime.Now;
                        }
                        <span>@date</span>
                    </div>
                </div>

                <div class="form-group d-flex ">
                    <label class="control-label col-md-2">Usuario:</label>
                    <div class="col-md-10">
                        <span>@Model.Worker.Mail</span>
                    </div>
                </div>

                <div class="form-group d-flex ">
                    @Html.LabelFor(model => model.Cash, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control col-3 text-box single-line" data-val="true" data-val-number="El campo Caja inicial debe ser un número." data-val-required="El campo Caja inicial es obligatorio." id="Cash" name="Cash" type="text">
                        @Html.ValidationMessageFor(model => model.Cash, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Agregar" onclick='ActionController("BeginDays/AddBeginDay", "#BeginDay")' class="btn btn-success" />
                    </div>
                </div>
            </div>
            <div class="col-md-3 d-flex flex-wrap ">
                @foreach (var item in currencyHundredsArray)
                {
                    <div class="col-md-12 d-flex my-1">
                        <div class="col-4 text-right">
                            <span>¢</span>
                            <span class="">@item</span>
                        </div>
                        <input class="form-control col-5" type="number" id="@item" onchange="InitialCash()" />
                    </div>
                }
            </div>
            <div class="col-md-3 d-flex flex-wrap ">
                @foreach (var item in currencyThousandsArray)
                {
                    <div class="col-md-12 d-flex my-1">
                        <div class="col-4 text-right">
                            <span>¢</span>
                            <span class="">@item</span>
                        </div>
                        <input class="form-control col-5" type="number" id="@item" onchange="InitialCash()"/>
                    </div>
                }
            </div>
        </div>

    </div>
}


