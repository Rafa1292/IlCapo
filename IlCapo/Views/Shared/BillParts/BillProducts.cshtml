<div class="col-12 bill-header d-flex flex-wrap text-white text-center border-white border-bottom border-top p-1">
    <div class="col-1 justify-content-center align-items-center bill-item-check">
        <input class="form-check" type="checkbox" checked />
    </div>
    <div class="col-3 p-0">
        <h6>
            <strong>
                Producto
            </strong>
        </h6>
    </div>
    <div class="col-2 p-0">
        <h6>
            <strong>
                Cantidad
            </strong>
        </h6>
    </div>
    <div class="col-1 p-0">
        <h6>

            <strong>
                Cdu
            </strong>
        </h6>
    </div>
    <div class="col-2 p-0">
        <h6>

            <strong>
                Total
            </strong>
        </h6>
    </div>
    <div class="col-3 p-0">
        <h6>
            <strong>
                Observacion:
            </strong>
        </h6>
    </div>
</div>

<div class="bill-body col-12 p-1">
    @for (int i = 0; i < 1; i++)
    {

        <div class="col-12 bill-item d-flex flex-wrap text-white text-center border-white ">
            <div class="col-1 justify-content-center align-items-center bill-item-check">
                <input class="form-check" type="checkbox" checked />
            </div>
            <div class="col-3 p-0">
                Arroz con pollo
            </div>
            <div class="col-2 p-0">
                2
            </div>
            <div class="col-1 p-0">
                ¢3,000
            </div>
            <div class="col-2 p-0">
                ¢6,000
            </div>
            <div class="col-3 p-0">
                <input type="text" class="form-control rounded" />

            </div>
        </div>
    }
</div>
